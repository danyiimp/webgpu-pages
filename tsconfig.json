{
  "compilerOptions": {
    "target": "ES2016",                                  
    "module": "CommonJS",  
    "declaration": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,           
    "strictNullChecks": false,  
    "sourceMap": true                                                 
  },
  "include": [
    "definitions.d.ts",
    "src/**/*",
    "node_modules/@webgpu/types/**/*"
  ]
}
